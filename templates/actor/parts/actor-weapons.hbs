<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Weapon'}}</div>
    <div class='item-prop ' data-damage="{{item.system.damage}}" data-damage-tags="{{item.system.traits}}">{{localize
      'Damage'}}</div>
    <div class='item-prop'>{{localize 'Reload'}}</div>
    <div class='item-prop'>{{localize 'Traits'}}</div>
    <div class='item-prop'>{{localize 'Range'}}</div>

    <div class='item-controls'>
      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' weapon'}}' data-type='weapon'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='weapon'}}
      </a>
    </div>
  </li>

  {{#each weapons as |item id|}}
  <li class='item flexrow' data-item-id='{{item._id}}'>
    <div class='item-name'>
      <div class='item-image'>
        <a class='item-control item-edit' data-roll-type='reload' title='{{localize "DOCUMENT.Update" type=' weapon'}}'>
          <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
        </a>
      </div>
      <h4 class='rollable' data-roll-type="attack">{{item.name}}</h4>
    </div>
    <div class='item-damage item-prop clickable apply-damage-button' data-damage="{{item.system.damage}}"
      data-damage-tags="{{item.system.traits}}">{{item.system.damage}}</div>
    <div class='item-reload rollable item-prop' data-roll-type='reload'>{{item.system.reload}}</div>
    <div class='item-traits item-prop'>{{item.system.traits}}</div>
    <div class='item-range item-prop'>{{item.system.range}}</div>
    <div class='item-controls'> {{!--below should render different hands depending on status --}}
      <a class='equip-toggle' name="system.equipped"><i
          class="{{#if system.equipped}}fa-solid fa-hand-fist{{else}}fa-regular fa-hand{{/if}}"></i></a>
      <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' weapon'}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' weapon'}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>