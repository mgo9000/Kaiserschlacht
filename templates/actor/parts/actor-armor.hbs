<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Armor'}}</div>
    <div class='item-prop'>{{localize 'Bonus'}}</div>
    <div class='item-prop'>{{localize 'Traits'}}</div>
    <div class='item-prop'>{{localize 'Speed'}}</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type='armor'}}' data-type='armor'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='armor'}}
      </a>
    </div>
  </li>
  {{#each armor as |item id|}}
  <li class='item flexrow' data-item-id='{{item._id}}'>
    <div class='item-name'>
      <div class='item-image'>
        <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type='armor'}}'>
          <img src='{{item.img}}' title='{{item.name}}' width='24' height='24' />
        </a>
      </div>
      <h4>{{item.name}}</h4>
    </div>
    <div class='item-armor-bonus item-prop'>{{item.system.armorBonus}}</div>
    <div class='item-traits item-prop'>{{item.system.armorTraits}}</div>
    <div class='item-armor-penalty item-prop'>{{item.system.armorPenalty}}</div>
    <div class='item-controls'>
      <a class='equip-toggle' name="system.equipped"><i
          class="{{#if system.equipped}}fa-solid fa-hand-fist{{else}}fa-regular fa-hand{{/if}}"></i></a>
      <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type='armor'}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type='armor'}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>
