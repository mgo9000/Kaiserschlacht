<div class="grid grid-7col">

    <div class="saves flexcol grid-span-2">
        <div class="dodge-block flexrow flexshrink"><a class="dodge-button"
                data-dodge-value="system.abilities.finesse.value">Dodge</a><a class="block-button">Block</a></div>



        <div class="abilities flexcol">
            {{#each system.abilities as |ability key|}}
            <div class="ability flexrow flex-group-center">
                <label for="system.abilities.{{key}}.value" class="resource-label rollable flexlarge align-left"
                    data-roll="@abilities.{{key}}.mod" data-roll-type="diff"
                    data-label="{{ability.label}}">{{ability.label}}</label>
                <a class="stat-display" data-stat-type="ability" data-stat-key="{{key}}"
                    data-stat="{{json ability}}">{{ability.value}} +
                    {{ability.bonus}}</a>
            </div>
            {{/each}}

        </div>

    </div>
    <div class="items flexcol grid-span-5">
        <section>{{> "systems/kaiserschlacht/templates/actor/parts/actor-weapons.hbs"}}</section>
        <section>{{> "systems/kaiserschlacht/templates/actor/parts/actor-armor.hbs"}}</section>
        <section>{{> "systems/kaiserschlacht/templates/actor/parts/actor-items.hbs"}}</section>
    </div>

</div>